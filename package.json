{
  "name": "color-pen",
  "type": "module",
  "version": "0.1.0",
  "main": "cjs/index.cjs",
  "typings": "types/index.d.ts",
  "description": "a color pen for supports colors terminal",
  "scripts": {
    "b": "rollup --config rollup.config.js && tsc -p tsconfig.types.json",
    "clean:package": "node scripts/clean-package-json.js",
    "build": "npx ixxx rm dist && npm run b && npm run clean:package",
    "push:version": "bash -c 'git add . && git commit -m \"version: $1 $(date +\"%Y-%m-%d %H:%M:%S\")${2:+ }$2\" && git tag -a \"v$1\" -m \"$(date +\"%Y-%m-%d %H:%M:%S\")${2:+ }$2\" && git push origin main --tags' -- ",
    "push:submit": "bash -c 'git add . && git commit -m \"submit: $(date +\"%Y-%m-%d %H:%M:%S\")${1:+ }$1\" && git push origin main' -- ",
    "diff": "npx ixxx pkg diff",
    "eslint": "npx ixxx cls && eslint src",
    "beautify": "npm run prettier",
    "prettier": "npx ixxx cls && prettier . --write",
    "prepare": "husky",
    "postinstall": "npm run prepare",
    "test": "jest --coverage",
    "report": "cat ./coverage/lcov.info | coveralls",
    "coverage": "codecov",
    "preview": "node example/index.js",
    "versionPatch": "npx ixxx up -n",
    "pub": "npm run build && cd dist && npm publish --access public && cd ../"
  },
  "files": [
    "mjs",
    "cjs",
    "types"
  ],
  "exports": {
    ".": {
      "import": {
        "default": "./mjs/index.mjs",
        "types": "./types/index.d.ts"
      },
      "require": {
        "default": "./cjs/index.cjs",
        "types": "./types/index.d.ts"
      }
    }
  },
  "keywords": [
    "color-pen"
  ],
  "license": "ISC",
  "homepage": "https://earthnut.dev/color-pen",
  "bugs": {
    "url": "https://github.com/earthnutDev/color-pen/issues",
    "email": "earthnut.dev@outlook.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/earthnutDev/color-pen.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "a-js-tools": ">=0.1.1 <1.0.0",
    "a-type-of-js": ">=0.1.5 <1.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.11",
    "a-node-tools": "^0.0.15",
    "codecov": "^3.8.2",
    "coveralls": "^3.1.1",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jsdoc": "^50.6.9",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "rollup": "^4.36.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.5.0",
    "ts-jest": "^29.2.6",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,md,mdx,json}": [
      "eslint src --fix",
      "prettier --write"
    ]
  },
  "author": {
    "name": "earthnut",
    "email": "earthnut.dev@outlook.com",
    "url": "https://earthnut.dev"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Edge versions",
    "not Safari >= 0",
    "not IE >= 0",
    "not Firefox >= 0"
  ],
  "engines": {
    "node": ">=12.0.0"
  }
}
